<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		
		<record id="ir_rule_sale_order_reunion" model="ir.rule">
			<field name="name">Bons de commande de la Réunion</field>
			<field name="model_id" ref="sale.model_sale_order"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_unlink" eval="1"/>
			<field name="perm_read" eval="1"/>
			<field name="groups" eval="[(4, ref('arkeup_brand.res_group_brand_reunion'))]"/>
			<field name="domain_force">[('brand_id', '=', user.get_my_brand())]</field>
		</record>
		
		<record id="ir_rule_account_move_reunion" model="ir.rule">
			<field name="name">Pièces comptables de la Réunion</field>
			<field name="model_id" ref="account.model_account_move"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_unlink" eval="1"/>
			<field name="perm_read" eval="1"/>
			<field name="groups" eval="[(4, ref('arkeup_brand.res_group_brand_reunion'))]"/>
			<field name="domain_force">[('brand_id', '=', user.get_my_brand())]</field>
		</record>
		
		<record id="ir_rule_account_analytic_line_reunion" model="ir.rule">
			<field name="name">Écritures analytiques de la Réunion</field>
			<field name="model_id" ref="account.model_account_analytic_line"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_unlink" eval="1"/>
			<field name="perm_read" eval="1"/>
			<field name="groups" eval="[(4, ref('arkeup_brand.res_group_brand_reunion'))]"/>
			<field name="domain_force">[('account_id', '=', user.get_my_analytic_account())]</field>
		</record>
	
	</data>
</odoo>